# Development Dockerfile for API
FROM node:20-alpine

# Install pnpm latest
RUN corepack enable && corepack prepare pnpm@latest --activate

# Set working directory
WORKDIR /app

# Copy package files first for better caching
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY apps/api/package.json ./apps/api/
COPY packages/types/package.json ./packages/types/
COPY packages/eslint-config/package.json ./packages/eslint-config/
COPY packages/typescript-config/package.json ./packages/typescript-config/

# Install all dependencies (including devDependencies for development)
RUN pnpm install --frozen-lockfile

# Copy source code
COPY . .

# Generate Prisma Client
WORKDIR /app/apps/api
RUN pnpm prisma generate

WORKDIR /app

EXPOSE 8000

# Create entrypoint script to run migrations before starting
RUN echo '#!/bin/sh' > /app/entrypoint.sh && \
    echo 'cd /app/apps/api' >> /app/entrypoint.sh && \
    echo 'pnpm prisma migrate deploy || true' >> /app/entrypoint.sh && \
    echo 'exec pnpm --filter api dev' >> /app/entrypoint.sh && \
    chmod +x /app/entrypoint.sh

CMD ["/app/entrypoint.sh"]

